<%= turbo_stream.remove @event_date %>

<% if previous_date = @event_date.previous_date %>
  <%= turbo_stream.after previous_date do %>
    <%= render @event_date, experience: @experience %>
  <% end %>
<% else %>
  <%= turbo_stream.prepend "event_dates" do %>
    <%= render @event_date, experience: @experience %>
  <% end %>
<% end %>

<%= render_turbo_stream_flash_messages %>