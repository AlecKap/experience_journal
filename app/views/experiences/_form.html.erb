<%= simple_form_for experience, html: { class: "experience form" } do |f| %>
  <%= form_error_notification(experience) %>

  <%= f.input :name, input_html: { autofocus: true } %>
  <%= link_to experiences_path, class: "btn btn--cancel" do %>
    <i class="bi bi-x-circle"></i>
  <% end %>
  <%= button_tag type: "submit", class: "btn btn--submit" do %>
    <i class="bi bi-check-circle-fill"></i>
  <% end %>
<% end %>