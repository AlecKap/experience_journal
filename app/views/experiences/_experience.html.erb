<%= turbo_frame_tag experience do %>
  <div class="experience">
    <%= link_to experience.name,
                experience_path(experience),
                data: { turbo_frame: "_top"} %>
    <div class="experience__actions">
      <%= link_to edit_experience_path(experience), class: "btn btn--light" do %>
        <i class="bi bi-pencil-square"></i>
      <% end %>
      <%= button_to experience_path(experience),
                    method: :delete,
                    class: "btn btn--light",
                    form: { data: { turbo_confirm: "Are you sure?" } } do %>
        <i class="bi bi-trash"></i>
      <% end %>
    </div>
  </div>
<% end %>