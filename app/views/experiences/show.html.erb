<main class="container">
  <%= link_to sanitize("&larr; Back to experiences"), experiences_path %>
  
  <div class="header">
    <h1>
      <%= @experience.name %>
    </h1>

    <%= link_to "New Entry Date",
                new_experience_entry_date_path(@experience),
                data: { turbo_frame: dom_id(EntryDate.new) },
                class: "btn btn--primary" %>
  </div>
  
  <%= turbo_frame_tag EntryDate.new %>

  <%= turbo_frame_tag "entry_dates" do %>
    <%= render "entry_dates/empty_state" %>
    <%= render @entry_dates, experience: @experience %>
  <% end %>
</main>