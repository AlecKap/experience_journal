<%= simple_form_for [experience, entry_date], html: { class: "form entry-date" } do |f| %>
  <%= form_error_notification(entry_date) %>

  <%= f.input :date, html5: true, input_html: { autofocus: true } %>
  <%= link_to experience_path(experience), class: "btn btn--cancel" do %>
    <i class="bi bi-x-circle"></i>
<% end %>
  <%= button_tag type: "submit", class: "btn btn--submit-for-date" do %>
    <i class="bi bi-check-circle-fill"></i>
  <% end %>
<% end %>
