<%= simple_form_for [@experience, entry_date, event], html: { class: "form event" } do |f| %>
  <%= form_error_notification(event) %>

 <%= f.input :title, input_html: { autofocus: true } %>
  <%= link_to experience_entry_date_path(@experience, entry_date), class: "btn btn--cancel" do %>
    <i class="bi bi-x-circle"></i>
  <% end %>
  <%= button_tag type: "submit", class: "btn btn--submit" do %>
    <i class="bi bi-check-circle-fill"></i>
  <% end %>
<% end %>